<%= render '/components/navbar' %>
<%= render '/components/search-navbar' %>


  <h1><%= current_user.first_name %></h1>
 <div class="background">

  <div>
    <% if @puppies.size > 0 %>
      <h3>Your Puppies</h3>
    <% else %>
      <h3>You have no registered puppies</h3>
    <% end %>

    <% @puppies.each do |puppy| %>
      <div class="card-puppy">
        <%= cl_image_tag puppy.photo %>
        <div class="infos">

          <div class="puppy-text">
            <h3>Name</h3>
            <h2><%= puppy.name %></h2>
            <h3>Age</h3>
            <h2><%= puppy.birthdate %></h2>
            <h3>Breed</h3>
            <h2><%= puppy.breed %></h2>
          </div>

          <div class="card-puppy-infos">
            <%= link_to "More", puppy, class: 'btn btn-warning' %>
          </div>
        </div>
      </div>
    <% end %>
      <%= link_to 'Back', :back , class: "btn btn-primary small"%>
  </div>
  <div>
    <h3>Your Bookings</h3>
      <% @bookings.each do |booking| %>
        <%= link_to puppy_booking_path(booking.puppy, booking) do %>
          <p><%= booking.puppy.name %></p>
        <% end %>
      <% end %>
  </div>
    <div>
      <%= link_to "Add Your Puppy", new_puppy_path, class: "btn btn-primary small" %>
      <%= link_to 'Edit Profile', edit_profile_path, class: "btn btn-warning small"%>
    </div>

</div>
